{
  "compilerOptions": {
    "jsx": "preserve",
    "skipLibCheck": true,
    
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    
    // "strict": true,
    // "strictPropertyInitialization": false,

    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,

    "allowJs": true
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"],

  "ts-node": {
    "esm": true
  }
}
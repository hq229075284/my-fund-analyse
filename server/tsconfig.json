{
  "compilerOptions": {
    "jsx": "preserve",
    "skipLibCheck": true,
    
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    
    // "strict": true,
    // "strictPropertyInitialization": false,

    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,

    "allowJs": true,

    "baseUrl": ".",
    "paths": {
      "@/*":[
        "*"
      ]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"],

  "ts-node": {
    // "esm": true
    "require": ["tsconfig-paths/register"]
  }
}